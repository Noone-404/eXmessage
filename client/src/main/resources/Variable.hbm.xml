<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-mapping>
    <class entity-name="Variable">
        <id name="name"
            type="string"
            column="name">
        </id>

        <property name="value"
                  column="value"
                  type="string"/>
    </class>
</hibernate-mapping>
